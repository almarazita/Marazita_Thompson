function surprise_summary(unit_data, unit_table)
%% Neuron summary by "surprise"
% Plot the firing rate distributions of a neuron for trials with evidence
% that signals switching behavior under both conditions.
% Assumes you have unit_data and unit_table loaded in
% u: row/struct of unit data table to use

num_plots = 3;
%num_plots = length(unit_data);
for u=96:96

    %% 1. Identify trials of interest.
    % - Weak switch cue (middle three positions)
    data = unit_data(u);
    unit_id = "Unit " + num2str(unit_table{u,1});
    
    % Criterion 1: Weak switch cue
    % What the previous correct target and hazard rate were
    prevState = [nan; data.ids.correct_target(1:end-1)];
    prevH = [nan; data.values.hazard(1:end-1)];
    thisH = data.values.hazard;
    cue_loc = data.ids.sample_id;
    switch_cue = zeros(length(cue_loc),1);
    % The cue signals switch if its position is away from what was previously
    % correct, and we're in the same AODR block
    switch_cue(thisH==prevH & prevState==1 & (cue_loc==0 | cue_loc==1))=1; % Bottom to top
    switch_cue(thisH==prevH & prevState==2 & (cue_loc==0 | cue_loc==-1))=1; % Top to bottom
    
    % Criterion 2: Switch rate
    low_switch = 0.05;
    high_switch = 0.50;
    
    % Criterion 3: Whether there was a switch
    obj_switch = zeros(length(cue_loc),1);
    obj_switch(prevState~=data.ids.correct_target)=1;
    
    % Criterion 4: Response
    correct = data.ids.score==1 & ~isnan(data.ids.choice);
    
    %% 2a. Plot by cue location
    % Get cue location tuning curve
    figure('Position', [100, 100, 800, 600]);
    axs = [subplot(1, 4, 1), subplot(1, 4, 2)];
    plotHazardCueAvgFR(data,1,axs);
    cla;
    title('');

    % i) Low switch
    % Surprising (weak switch) cues
    %disp("Low Switch")
    surprise_T1 = data.values.hazard==low_switch & switch_cue & cue_loc==-1;
    %disp("Surprise T1: " + num2str(sum(surprise_T1)))
    surprise_ambiguous = data.values.hazard==low_switch & switch_cue & cue_loc==0;
    %disp("Surprise Ambiguous: " + num2str(sum(surprise_ambiguous)))
    surprise_T2 = data.values.hazard==low_switch & switch_cue & cue_loc==1;
    %disp("Surprise T2: " + num2str(sum(surprise_T2)))
    
    low_surprise_avg = [mean(data.epochs.target_on(surprise_T1)),...
        mean(data.epochs.target_on(surprise_ambiguous)),...
        mean(data.epochs.target_on(surprise_T2))];
    low_surprise_SEM = [std(data.epochs.target_on(surprise_T1))/sqrt(length(data.epochs.target_on(surprise_T1))),...
        std(data.epochs.target_on(surprise_ambiguous))/sqrt(length(data.epochs.target_on(surprise_ambiguous))),...
        std(data.epochs.target_on(surprise_T2))/sqrt(length(data.epochs.target_on(surprise_T2)))];
    
    % Weak stay cues
    stay_T1 = data.values.hazard==low_switch & ~switch_cue & cue_loc==-1;
    %disp("Stay -1 Cues: " + num2str(sum(stay_T1)))
    stay_ambiguous = data.values.hazard==low_switch & ~switch_cue & cue_loc==0;
    %disp("Stay 0 Cues (should be zero?): " + num2str(sum(stay_ambiguous)))
    stay_T2 = data.values.hazard==low_switch & ~switch_cue & cue_loc==1;
    %disp("Stay 1 Cues: " + num2str(sum(stay_T2)))
    
    low_stay_avg = [mean(data.epochs.target_on(stay_T1)),...
        mean(data.epochs.target_on(stay_ambiguous)),...
        mean(data.epochs.target_on(stay_T2))];
    low_stay_SEM = [std(data.epochs.target_on(stay_T1))/sqrt(length(data.epochs.target_on(stay_T1))),...
        std(data.epochs.target_on(stay_ambiguous))/sqrt(length(data.epochs.target_on(stay_ambiguous))),...
        std(data.epochs.target_on(stay_T2))/sqrt(length(data.epochs.target_on(stay_T2)))];
    
    % ii) High switch
    % Surprising (weak switch) cues
    disp("High Switch")
    surprise_T1 = data.values.hazard==high_switch & switch_cue & cue_loc==-1;
    disp("Surprise T1: " + num2str(sum(surprise_T1)))
    surprise_ambiguous = data.values.hazard==high_switch & switch_cue & cue_loc==0;
    disp("Surprise Ambiguous: " + num2str(sum(surprise_ambiguous)))
    surprise_T2 = data.values.hazard==high_switch & switch_cue & cue_loc==1;
    disp("Surprise T2: " + num2str(sum(surprise_T2)))
    
    high_surprise_avg = [mean(data.epochs.target_on(surprise_T1)),...
        mean(data.epochs.target_on(surprise_ambiguous)),...
        mean(data.epochs.target_on(surprise_T2))];
    high_surprise_SEM = [std(data.epochs.target_on(surprise_T1))/sqrt(length(data.epochs.target_on(surprise_T1))),...
        std(data.epochs.target_on(surprise_ambiguous))/sqrt(length(data.epochs.target_on(surprise_ambiguous))),...
        std(data.epochs.target_on(surprise_T2))/sqrt(length(data.epochs.target_on(surprise_T2)))];
    
    % Weak stay cues
    stay_T1 = data.values.hazard==high_switch & ~switch_cue & cue_loc==-1;
    disp("Stay -1 Cues: " + num2str(sum(stay_T1)))
    stay_ambiguous = data.values.hazard==high_switch & ~switch_cue & cue_loc==0;
    disp("Stay 0 Cues: " + num2str(sum(stay_ambiguous)))
    stay_T2 = data.values.hazard==high_switch & ~switch_cue & cue_loc==1;
    disp("Stay 1 Cues: " + num2str(sum(stay_T2)))
    
    high_stay_avg = [mean(data.epochs.target_on(stay_T1)),...
        mean(data.epochs.target_on(stay_ambiguous)),...
        mean(data.epochs.target_on(stay_T2))];
    high_stay_SEM = [std(data.epochs.target_on(stay_T1))/sqrt(length(data.epochs.target_on(stay_T1))),...
        std(data.epochs.target_on(stay_ambiguous))/sqrt(length(data.epochs.target_on(stay_ambiguous))),...
        std(data.epochs.target_on(stay_T2))/sqrt(length(data.epochs.target_on(stay_T2)))];
    
    % Plot
    subplot(1, 4, 2);
    hold on;
    avgs = [low_surprise_avg', low_stay_avg', high_surprise_avg', high_stay_avg'];
    b = bar(avgs, 'EdgeColor', 'k');
    b(1).FaceColor = [4 94 167] / 255;
    b(2).FaceColor = [4 94 167] / 255;
    b(2).FaceAlpha = 0.7;
    b(2).LineStyle = '--';
    b(3).FaceColor = [194 0 77] / 255;
    b(4).FaceColor = [194 0 77] / 255;
    b(4).FaceAlpha = 0.7;
    b(4).LineStyle = '--';
    
    % Add SEM as error bars
    err = [low_surprise_SEM', low_stay_SEM', high_surprise_SEM', high_stay_SEM'];
    groupwidth = min(0.8, 4/(4 + 1.5));
    for i = 1:4
        x = (1:3) - groupwidth/2 + (2*i-1) * groupwidth / (2*4);
        errorbar(x, avgs(:,i), err(:,i), 'k', 'LineStyle', 'none', 'DisplayName', '');
    end
    hold off
    
    % Customize x-tick labels
    xticks(1:4);
    xticklabels({'-1', '0', '1'});
    
    % Set axis labels
    xlabel('Cue Location');
    ylabel('Firing Rate');
    
    % Legend
    b(1).DisplayName = 'Low H Distal';
    b(2).DisplayName = 'Low H Proximal';
    b(3).DisplayName = 'High H Distal';
    b(4).DisplayName = 'High H Proximal';
    legend(b, 'Location', 'north');
    
    % Title
    filename = data.fileName;
    startIdx = strfind(filename, 'MM');
    endIdx = strfind(filename, '.hdf5') - 1;
    sessionName = filename(startIdx:endIdx);
    sgtitle({sessionName, unit_id}, 'Interpreter', 'none')
    
    hold off;
    
    %% 2b. By choice
    % i) Low switch
    % Surprising (weak switch) cues
    surprise_stay = data.values.hazard==low_switch & switch_cue & ((obj_switch & ~correct) | (~obj_switch & correct));
    surprise_switch = data.values.hazard==low_switch & switch_cue & ((obj_switch & correct) | (~obj_switch & ~correct));
    
    low_surprise_avg = [mean(data.epochs.target_on(surprise_stay)),...
        mean(data.epochs.target_on(surprise_switch))];
    low_surprise_SEM = [std(data.epochs.target_on(surprise_stay))/sqrt(length(data.epochs.target_on(surprise_stay))),...
        mean(data.epochs.target_on(surprise_switch))/sqrt(length(data.epochs.target_on(surprise_switch)))];
    
    % Weak stay cues
    stay_stay = data.values.hazard==low_switch & ~switch_cue & ((obj_switch & ~correct) | (~obj_switch & correct));
    stay_switch = data.values.hazard==low_switch & ~switch_cue & ((obj_switch & correct) | (~obj_switch & ~correct));
  
    low_stay_avg = [mean(data.epochs.target_on(stay_stay)),...
        mean(data.epochs.target_on(stay_switch))];
    low_stay_SEM = [std(data.epochs.target_on(stay_stay))/sqrt(length(data.epochs.target_on(stay_stay))),...
        mean(data.epochs.target_on(stay_switch))/sqrt(length(data.epochs.target_on(stay_switch)))];

    % ii) High switch
    % Surprising (weak switch) cues
    surprise_stay = data.values.hazard==high_switch & switch_cue & ((obj_switch & ~correct) | (~obj_switch & correct));
    surprise_switch = data.values.hazard==high_switch & switch_cue & ((obj_switch & correct) | (~obj_switch & ~correct));
    
    high_surprise_avg = [mean(data.epochs.target_on(surprise_stay)),...
        mean(data.epochs.target_on(surprise_switch))];
    high_surprise_SEM = [std(data.epochs.target_on(surprise_stay))/sqrt(length(data.epochs.target_on(surprise_stay))),...
        mean(data.epochs.target_on(surprise_switch))/sqrt(length(data.epochs.target_on(surprise_switch)))];
    
    % Weak stay cues
    stay_stay = data.values.hazard==high_switch & ~switch_cue & ((obj_switch & ~correct) | (~obj_switch & correct));
    stay_switch = data.values.hazard==high_switch & ~switch_cue & ((obj_switch & correct) | (~obj_switch & ~correct));
  
    high_stay_avg = [mean(data.epochs.target_on(stay_stay)),...
        mean(data.epochs.target_on(stay_switch))];
    high_stay_SEM = [std(data.epochs.target_on(stay_stay))/sqrt(length(data.epochs.target_on(stay_stay))),...
        mean(data.epochs.target_on(stay_switch))/sqrt(length(data.epochs.target_on(stay_switch)))];

    % Plot
    subplot(1, 4, 3);
    hold on;
    avgs = [low_surprise_avg', low_stay_avg', high_surprise_avg', high_stay_avg'];
    b = bar(avgs, 'EdgeColor', 'k');
    b(1).FaceColor = [4 94 167] / 255;
    b(2).FaceColor = [4 94 167] / 255;
    b(2).FaceAlpha = 0.7;
    b(2).LineStyle = '--';
    b(3).FaceColor = [194 0 77] / 255;
    b(4).FaceColor = [194 0 77] / 255;
    b(4).FaceAlpha = 0.7;
    b(4).LineStyle = '--';
    
    % Add SEM as error bars
    err = [low_surprise_SEM', low_stay_SEM', high_surprise_SEM', high_stay_SEM'];
    groupwidth = min(0.8, 4/(4 + 1.5));
    for i = 1:4
        x = (1:2) - groupwidth/2 + (2*i-1) * groupwidth / (2*4);
        errorbar(x, avgs(:,i), err(:,i), 'k', 'LineStyle', 'none', 'DisplayName', '');
    end
    hold off
    
    % Customize x-tick labels
    xticks(1:2);
    xticklabels({'Stay', 'Switch'});
    
    % Set axis labels
    xlabel('Choice');
    ylabel('Firing Rate');

    %% 2c. By correctness
    % i) Low switch
    % Surprising (weak switch) cues
    surprise_correct = data.values.hazard==low_switch & switch_cue & correct;
    surprise_incorrect = data.values.hazard==low_switch & switch_cue & ~correct;
    
    low_surprise_avg = [mean(data.epochs.target_on(surprise_correct)),...
        mean(data.epochs.target_on(surprise_incorrect))];
    low_surprise_SEM = [std(data.epochs.target_on(surprise_correct))/sqrt(length(data.epochs.target_on(surprise_correct))),...
        mean(data.epochs.target_on(surprise_incorrect))/sqrt(length(data.epochs.target_on(surprise_incorrect)))];
    
    % Weak stay cues
    stay_correct = data.values.hazard==low_switch & ~switch_cue & correct;
    stay_incorrect = data.values.hazard==low_switch & ~switch_cue & ~correct;
  
    low_stay_avg = [mean(data.epochs.target_on(stay_correct)),...
        mean(data.epochs.target_on(stay_incorrect))];
    low_stay_SEM = [std(data.epochs.target_on(stay_correct))/sqrt(length(data.epochs.target_on(stay_correct))),...
        mean(data.epochs.target_on(stay_incorrect))/sqrt(length(data.epochs.target_on(stay_incorrect)))];

    % ii) High switch
    % Surprising (weak switch) cues
    surprise_correct = data.values.hazard==high_switch & switch_cue & correct;
    surprise_incorrect = data.values.hazard==high_switch & switch_cue & ~correct;
    
    high_surprise_avg = [mean(data.epochs.target_on(surprise_correct)),...
        mean(data.epochs.target_on(surprise_incorrect))];
    high_surprise_SEM = [std(data.epochs.target_on(surprise_correct))/sqrt(length(data.epochs.target_on(surprise_correct))),...
        mean(data.epochs.target_on(surprise_incorrect))/sqrt(length(data.epochs.target_on(surprise_incorrect)))];
    
    % Weak stay cues
    stay_correct = data.values.hazard==high_switch & ~switch_cue & correct;
    stay_incorrect = data.values.hazard==high_switch & ~switch_cue & ~correct;
  
    high_stay_avg = [mean(data.epochs.target_on(stay_correct)),...
        mean(data.epochs.target_on(stay_incorrect))];
    high_stay_SEM = [std(data.epochs.target_on(stay_correct))/sqrt(length(data.epochs.target_on(stay_correct))),...
        mean(data.epochs.target_on(stay_incorrect))/sqrt(length(data.epochs.target_on(stay_incorrect)))];

    % Plot
    subplot(1, 4, 4);
    hold on;
    avgs = [low_surprise_avg', low_stay_avg', high_surprise_avg', high_stay_avg'];
    b = bar(avgs, 'EdgeColor', 'k');
    b(1).FaceColor = [4 94 167] / 255;
    b(2).FaceColor = [4 94 167] / 255;
    b(2).FaceAlpha = 0.7;
    b(2).LineStyle = '--';
    b(3).FaceColor = [194 0 77] / 255;
    b(4).FaceColor = [194 0 77] / 255;
    b(4).FaceAlpha = 0.7;
    b(4).LineStyle = '--';
    
    % Add SEM as error bars
    err = [low_surprise_SEM', low_stay_SEM', high_surprise_SEM', high_stay_SEM'];
    groupwidth = min(0.8, 4/(4 + 1.5));
    for i = 1:4
        x = (1:2) - groupwidth/2 + (2*i-1) * groupwidth / (2*4);
        errorbar(x, avgs(:,i), err(:,i), 'k', 'LineStyle', 'none', 'DisplayName', '');
    end
    hold off
    
    % Customize x-tick labels
    xticks(1:2);
    xticklabels({'Correct', 'Incorrect'});
    
    % Set axis labels
    xlabel('Score');
    ylabel('Firing Rate');
    
    % %% 2d. By outcome
    % % i) Low switch
    % % - Incorrect stay
    % disp("Low Switch")
