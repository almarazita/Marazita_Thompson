    % 
    % % ii) High switch
    % disp("High Switch")
    % % - Incorrect stay
    % incorrect_stay = data.values.hazard==high_switch & switch_cue & obj_switch & ~correct;
    % disp("Incorrect stays: " + num2str(sum(incorrect_stay)))
